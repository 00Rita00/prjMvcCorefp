@model IEnumerable<prjMvcCorefp.Models.TOffService>

@{
    ViewData["Title"] = "List";
}

<h1>就醫交班一覽表</h1>
@*關鍵字查詢頁面*@
@using (Html.BeginForm())
{
        <p>
            關鍵字
        @Html.TextBox("txtKeyword")
            <input type="submit" value="查詢" />
        </p>
}
<p>
    <a asp-action="COffServiceCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PId)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.O就診日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O回診日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P姓名)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P身分證字號)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P出生日期)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PIdNavigation.P聯絡電話)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.O醫師診斷)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O指示與用藥)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O建立)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.O更新)
            </th>
            <th>
                記錄人員
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PId)
                </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.O就診日期)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O回診日期)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PIdNavigation.P姓名)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.PIdNavigation.P身分證字號)
            </td>
            <td>
                 @Html.DisplayFor(modelItem => item.PIdNavigation.P出生日期)
            </td>
             <td>
                 @Html.DisplayFor(modelItem => item.PIdNavigation.P聯絡電話 )
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.O醫師診斷)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O指示與用藥)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O建立)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O更新)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EIdNavigation.E員工姓名)
            </td>
            <td>
                    @Html.ActionLink("OffServiceEdit", "OffServiceEdit",  new {  id=item.OId  }) |
                @Html.ActionLink("Details", "Details", new {  id=item.OId  }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.OId  },new{onclick="return confirm('確定要刪除嗎?')",@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
